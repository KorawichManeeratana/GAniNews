generator client {
  provider = "prisma-client-js"
  output   = "../src/generated/prisma"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int      @id @default(autoincrement())
  username   String
  password   String
  role       String
  created_at DateTime @default(now())
  email      String

  posts Posts[]
}

model Posts {
  id         Int      @id @default(autoincrement())
  title      String
  body       String
  user_id    Int
  status     String
  created_at DateTime @default(now())
  like       Int
  category   String

  user          Users          @relation(fields: [user_id], references: [id])
  comments      Comment[]
  notifications Notification[]
  genres        genrespost[]
}

model Genres {
  id       Int    @id @default(autoincrement())
  gen_name String

  posts genrespost[]
}

model genrespost {
  gen_id  Int
  post_id Int

  post  Posts  @relation(fields: [post_id], references: [id])
  genre Genres @relation(fields: [gen_id], references: [id])

  @@id([gen_id, post_id])
}

model Comment {
  id      Int    @id @default(autoincrement())
  post_id Int
  detail  String

  post Posts @relation(fields: [post_id], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  url_post  String
  create_at DateTime @default(now())
  post_id   Int

  post Posts @relation(fields: [post_id], references: [id])
}
