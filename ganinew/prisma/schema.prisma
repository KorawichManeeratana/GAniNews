generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

model Users {
  id         Int      @id @default(autoincrement())
  username   String
  password   String
  role       String
  created_at DateTime @default(now())
  email      String

  posts Posts[]
  userinfo UserInfo?
}
model UserInfo {
  id       Int     @id @default(autoincrement())
  bio      String?
  location String?
  name     String?
  photo    String?
  user_id  Int     @unique

  user Users @relation(fields: [user_id], references: [id])
  usergen UserGen[]
}
model UserGen {
  userinfo_id Int
  gen_id      Int

  userinfo UserInfo @relation(fields: [userinfo_id], references: [id])
  genre    Genres   @relation(fields: [gen_id], references: [id])

  @@id([userinfo_id, gen_id])
}

model Posts {
  id         Int      @id @default(autoincrement())
  title      String
  body       String
  user_id    Int
  status     String  @default("Available")
  created_at DateTime @default(now())
  likes       Int @default(0)
  category   String
  description String @default("NULL")
  image String @default("https://cdn.pixabay.com/photo/2023/02/18/11/00/icon-7797704_640.png")

  user          Users          @relation(fields: [user_id], references: [id])
  comments      Comment[]
  notifications Notification[]
  genres        genrespost[]
}

model Genres {
  id       Int    @id @default(autoincrement())
  gen_name String

  posts genrespost[]
  usergen UserGen[]
}

model genrespost {
  gen_id  Int
  post_id Int

  post  Posts  @relation(fields: [post_id], references: [id])
  genre Genres @relation(fields: [gen_id], references: [id])

  @@id([gen_id, post_id])
}

model Comment {
  id      Int    @id @default(autoincrement())
  post_id Int
  detail  String

  post Posts @relation(fields: [post_id], references: [id])
}

model Notification {
  id        Int      @id @default(autoincrement())
  title     String
  content   String
  url_post  String
  create_at DateTime @default(now())
  post_id   Int

  post Posts @relation(fields: [post_id], references: [id])
}
